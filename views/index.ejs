<% layout("/layouts/boilerplate") %>



    <div class="text-center center-div" id="login">
        <div class="col-7 offset-4">
            <div class="w-50 border py-5 login-div">
                <div class="title pb-5">
                    <h2 class="font-weight-bold">Login</h2>
                    <span>Login for the existing user</span>
                </div>
                <form action="/login" method="POST" class="login-form mx-3">
                    <div class="form-group form-floating mb-3 position-relative">
                        <input type="email" name="email" class="form-control" placeholder="Email" required>
                        <label>Email</label>
                    </div>
                    <div>
                        <small class="form-text text-muted text-left">Register email address</small>
                    </div>
                    <div class="form-group form-floating mt-3 position-relative">
                        <input type="password" name="password" id="password" class="form-control" placeholder="Password"
                            required>
                        <label>Password</label>
                        <span class="password-toggle position-absolute">
                            <i class="fas fa-eye" id="toggleEye"></i>
                        </span>
                    </div>
                    <button type="submit" class="btn btn-dark mt-4 px-5">Submit</button>
                </form>
            </div>
        </div>
    </div>